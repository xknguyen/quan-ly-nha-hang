@model TrangQuanLyNhaHang.Models.TaiKhoan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Share/QuanLy/_QuanLy.cshtml";
}


<div class="form-horizontal">
    <div class="page-content">
        <div class="page-header position-relative">
            <h1>
                Sửa Thông Tin Tai Khoan
                @*<small>
                        <i class="icon-double-angle-right"></i>
                        Common form elements and layouts
                    </small>*@
            </h1>
        </div><!-- /.page-header -->

        <div class="row-fluid">
            <div class="span12 form-horizontal">
             @using (Html.BeginForm())
             {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaTaiKhoan)

                    <div class="control-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.XacNhanMatKhau, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.EditorFor(model => model.XacNhanMatKhau, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.XacNhanMatKhau, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.NhoMatKhau, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="controls">
                            
                                @Html.EditorFor(model => model.NhoMatKhau)
                                @Html.ValidationMessageFor(model => model.NhoMatKhau, "", new { @class = "text-danger" })
                       
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.LoaiTaiKhoan, "LoaiTaiKhoan", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.DropDownList("LoaiTaiKhoan", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LoaiTaiKhoan, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.TenNguoiDung, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.EditorFor(model => model.TenNguoiDung, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenNguoiDung, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.EditorFor(model => model.HinhAnh, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.SoDienThoai, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-actions no-color">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Luu Lai" class="btn btn-default"/>
                        </div>
                        <div>
                            @Html.ActionLink("Quay Lai", "Index")
                        </div>
                    </div>
                </div>
             }


            </div>
        </div>
    </div>
</div>