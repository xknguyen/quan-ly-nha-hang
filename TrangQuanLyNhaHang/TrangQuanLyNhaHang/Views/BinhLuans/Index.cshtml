@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<TrangQuanLyNhaHang.Models.BinhLuan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Share/QuanLy/_QuanLy.cshtml";
}


<div class="row-fluid margin-bottom">

    <div class="table-header">
        Danh sách Binh Luan

    </div>

    <div id="sample-table-2_wrapper" class="dataTables_wrapper" role="grid">
        <div class="row-fluid">
            <div class="span6">
                <div id="sample-table-2_length" class="dataTables_length">
                    <label>
                        Display
                        <select size="1" name="sample-table-2_length" aria-controls="sample-table-2">
                            <option value="5" selected="selected">5</option>
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select> records
                    </label>
                </div>
            </div>
            <div class="span6">
                <div class="dataTables_filter" id="sample-table-2_filter">
                    <label>Search: <input type="text" aria-controls="sample-table-2"></label>
                </div>
            </div>
        </div>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().BinhLuan1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().NgayDang)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().TaiKhoan.Email)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BinhLuan1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDang)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaiKhoan.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaCuaBinhLuan }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MaCuaBinhLuan }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaCuaBinhLuan })
                    </td>
                </tr>
            }

        </table>
        <div class="dataTables_paginate paging_bootstrap pagination align-center">
            @Html.ActionLink("Thêm Binh Luan", "Create")
        </div>
        <div class="row-fluid">
            <div class="span6">
                <div class="dataTables_info" id="sample-table-2_info">
                    trang@(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
                </div>
            </div>
            <div class="span6">
                <div class="dataTables_paginate paging_bootstrap pagination">
                    <ul>
                        @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page = Page }))
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>