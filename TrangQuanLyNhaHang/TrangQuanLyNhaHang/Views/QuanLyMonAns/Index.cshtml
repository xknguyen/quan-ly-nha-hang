@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<TrangQuanLyNhaHang.Models.MonAn>
@*@model IEnumerable<QuanLyAdmin.Models.MonAn>*@

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Share/QuanLy/_QuanLy.cshtml";
}


<div class="row-fluid">

    <div class="table-header">
        Danh sách Món Ăn
    </div>

    <div id="sample-table-2_wrapper" class="dataTables_wrapper" role="grid">
        <div class="row-fluid">
            <div class="span6">
                <div id="sample-table-2_length" class="dataTables_length">
                    <label>
                        Display
                        <select size="1" name="sample-table-2_length" aria-controls="sample-table-2">
                            <option value="5" selected="selected">5</option>
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select> records
                    </label>
                </div>
            </div>
            <div class="span6">
                <div class="dataTables_filter" id="sample-table-2_filter">
                    <label>Search: <input type="text" aria-controls="sample-table-2"></label>
                </div>
            </div>
        </div>
        <table id="sample-table-2" class="table table-striped table-bordered table-hover">

            <tr>
                <th class="center">
                    <label>
                        <input type="checkbox" class="ace" />
                        <span class="lbl"></span>
                    </label>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().TenMon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().HinhAnh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Gia)
                </th>
                @*<th class="hidden-320">
                    @Html.DisplayNameFor(model => model.First().ChiTiet)
                </th>*@

                <th class="hidden-phone">
                    @*<i class="icon-time bigger-110 hidden-phone"></i>*@
                    @Html.DisplayNameFor(model => model.First().SoLuotDat)
                </th>
                @*<th class="hidden-320">
                    @Html.DisplayNameFor(model => model.First().TenMon)
                </th>*@

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="center">
                        <label>
                            <input type="checkbox" class="ace" />
                            <span class="lbl"></span>
                        </label>
                    </td>

                    <td>
                        <a href="#">@Html.DisplayFor(modelItem => item.TenMon)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HinhAnh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gia)
                    </td>
                    @*<td class="hidden-320">
                        @Html.DisplayFor(modelItem => item.ChiTiet)
                    </td>*@
                    <td class="hidden-phone">
                        @Html.DisplayFor(modelItem => item.SoLuotDat)
                    </td>

                    @*<td class="hidden-320">
                        <span class="label label-warning">
                            @Html.DisplayFor(modelItem => item.LoaiMon1.TenLoai)
                        </span>
                    </td>*@
                    <td>
                        <i class="icon-pencil bigger-130 green">@Html.ActionLink("Edit", "Edit", new { id = item.MaMon })</i> ||
                        <i class="icon-zoom-in grey"> @Html.ActionLink("Details", "Details", new { id = item.MaMon })</i> ||
                        <i class="icon-trash bigger-130 red">@Html.ActionLink("Delete", "Delete", new { id = item.MaMon})</i>
                    </td>
                   
                    </tr>

                }
            </table>
            <div class="dataTables_paginate paging_bootstrap pagination align-center">
                @Html.ActionLink("Thêm Món Ăn", "Create")
            </div>
            <div class="row-fluid">
                <div class="span6">
                    <div class="dataTables_info" id="sample-table-2_info">
                        trang@(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
                    </div>
                </div>
                <div class="span6">
                    <div class="dataTables_paginate paging_bootstrap pagination">
                        <ul>
                            @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page = Page }))
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>


   

