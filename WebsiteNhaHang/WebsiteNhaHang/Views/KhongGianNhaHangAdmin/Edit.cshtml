@model WebsiteNhaHang.Models.KhongGianNhaHang

@{
    ViewBag.Title = "Sửa thông tin hình ảnh";
    Layout = "~/Views/layout/Admin/_QuanLy.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
