
@using WebsiteNhaHang.Models
@model List<MonAn>

@foreach (var item in Model)
{
    <div class="media col-md-4">
        <div class="card" style="width: 20rem; box-shadow: 5px 3px 5px #708090">
            <img class="card-img-top" src="@Url.Content("~/Content/img/MonAn/" + item.HinhAnh)" style="min-height: 225px" alt="Card image cap">
            <div class="card-body">
                <h4 class="card-title">@item.TenMon </h4>
                <p class="card-text">
                    Giá món ăn: <b style="color: #FF4000">@string.Format("{0:0,0}", @item.Gia)</b> VND
                </p>
                <a href="#" class="btn btn-info">Đặt món</a>
                <button style="font-family: 'Roboto Condensed', sans-serif" class="btn btn-info float-right mr-4" data-toggle="modal" data-target=".bd-example-modal-lg-@item.MaMon">Xem Chi Tiết</button>

                <div class="modal fade bd-example-modal-lg-@item.MaMon" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">@item.TenMon</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body pre-scrollable text-center" style="min-height: 450px">
                                <img src="@Url.Content("~/Content/img/MonAn/" + item.HinhAnh)" class="img-fluid" alt="Responsive image" style="width: 800px">
                                <p class="text-left">@item.ChiTiet</p>
                                <br />
                                <p class="text-left">Số lần được đặt: @item.SoLuotDat</p>

                            </div>
                            <div class="card-footer text-muted" style="max-height: 60px">
                                <div class="float-left ml-3">
                                    <h6>
                                        Giá: <strong style="color: #FF4000">@string.Format("{0:0,0}", @item.Gia) </strong> VND
                                    </h6>
                                </div>
                                <div class="float-right">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Xem sau</button>
                                    <button type="button" class="btn btn-primary">Đặt món</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
