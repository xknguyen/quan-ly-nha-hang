@model TrangQuanLy.Models.MonAn

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Share/Layout/Admins.cshtml";
}

<div class="form-horizontal">
    <div class="page-content">
        <div class="page-header position-relative">
            <h1>
                Thêm Món Ăn
                @*<small>
                        <i class="icon-double-angle-right"></i>
                        Common form elements and layouts
                    </small>*@
            </h1>
        </div><!-- /.page-header -->

        <div class="row-fluid">
            <div class="span12 form-horizontal">
                @using (Html.BeginForm())
                {

                    @Html.AntiForgeryToken()
                    <div class="form-actions">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="control-group">
                            @Html.LabelFor(model => model.TenMon, htmlAttributes: new { @class = "control-label col-md-2" })

                            <div class="controls">
                                @Html.TextBoxFor(model => model.TenMon, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenMon, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.LoaiMon, "LoaiMon", htmlAttributes: new { @class = "control-label col-md-2" })

                            <div class="controls">
                                @Html.DropDownList("LoaiMon", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LoaiMon, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label col-md-2" })



                            <div class="controls">
                                <input type="submit" value="Chọn File" class="btn btn-default" href="~/assets//img" ondblclick="HTMLButtonElement" />

                                @Html.EditorFor(model => model.HinhAnh, new { htmlAttributes = new { @class = "form-button" } })
                                @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.Gia, htmlAttributes: new { @class = "control-label col-md-2" })

                            <div class="controls">
                                @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.ChiTiet, htmlAttributes: new { @class = "control-label col-md-2" })

                            <div class="controls">
                                @Html.EditorFor(model => model.ChiTiet, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ChiTiet, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(model => model.SoLuotDat, htmlAttributes: new { @class = "control-label col-md-2" })

                            <div class="controls">
                                @Html.EditorFor(model => model.SoLuotDat, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SoLuotDat, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-actions no-color">

                            <div class="col-md-offset-2 col-md-10">
                                <i class="icon-ok bigger-110"></i>
                                <input type="submit" value="Thêm Món" class="btn btn-default" />
                            </div>

                            <div>
                                <i class="icon-undo bigger-110"></i>
                                @Html.ActionLink("Quay Lại", "Index")
                            </div><!-- /.row-fluid -->

                        </div>
                    </div>

                                             <!-- /.span -->
                }

            </div>
        </div>
    </div>
</div>