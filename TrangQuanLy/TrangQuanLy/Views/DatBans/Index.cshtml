@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<TrangQuanLy.Models.DatBan>



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Share/Layout/Admins.cshtml";
}

<div class="row-fluid">

    <div class="table-header">
        Danh sách Đặt Bàn
    </div>

    <div id="sample-table-2_wrapper" class="dataTables_wrapper" role="grid">
        <div class="row-fluid">
            <div class="span6">
                <div id="sample-table-2_length" class="dataTables_length">
                    <label>
                        Display
                        <select size="1" name="sample-table-2_length" aria-controls="sample-table-2">
                            <option value="5" selected="selected">5</option>
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select> records
                    </label>
                </div>
            </div>
            <div class="span6">
                <div class="dataTables_filter" id="sample-table-2_filter">
                    <label>Search: <input type="text" aria-controls="sample-table-2"></label>
                </div>
            </div>
        </div>
        <table id="sample-table-2" class="table table-striped table-bordered table-hover">

            <tr>
                <th class="center">
                    <label>
                        <input type="checkbox" class="ace" />
                        <span class="lbl"></span>
                    </label>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().NgayDatBan)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().NgayThucHien)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().SoNguoi)
                </th>
                <th class="hidden-320">
                    @Html.DisplayNameFor(model => model.First().TongTien)
                </th>
                <th class="hidden-320">
                    @Html.DisplayNameFor(model => model.First().TaiKhoan.Email)
                </th>

                <th class="hidden-phone">
                    @*<i class="icon-time bigger-110 hidden-phone"></i>*@
                    @Html.DisplayNameFor(model => model.First().KieuDatBan1.TenKieuDat)
                </th>


                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td class="center">
                        <label>
                            <input type="checkbox" class="ace" />
                            <span class="lbl"></span>
                        </label>
                    </td>

                    <td>
                        <a href="#">@Html.DisplayFor(modelItem => item.NgayDatBan)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayThucHien)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoNguoi)
                    </td>
                    <td class="hidden-320">
                        @Html.DisplayFor(modelItem => item.TongTien)
                    </td>
                    <td class="hidden-320">
                        <span class="label label-warning">
                            @Html.DisplayFor(modelItem => item.TaiKhoan.Email)
                        </span>
                    </td>
                    <td class="hidden-phone">
                        @Html.DisplayFor(modelItem => item.KieuDatBan1.TenKieuDat)
                    </td>


                    <td>
                        <div>

                            <div class="modal-body">
                                <button type="button" data-toggle="modal" data-target="#@item.MaDatBan">
                                    <i class="icon-pencil bigger-130 green"></i>
                                </button>
                                <div class="modal fade" id="@item.MaDatBan" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">Đặt Thêm Bàn</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body form-horizontal">
                                                <div class="form-horizontal">
                                                    
                                                        @Html.Action("Edit", new { id = item.MaDatBan })
                                                    
                                                </div>
                                            </div>
                                            <div>

                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                <button type="button" class="btn btn-primary">Save changes</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                        <div>
                            <button type="button" data-toggle="modal" data-target="#@item.MaDatBan">
                                <i class="icon-trash bigger-130 red"> </i>
                            </button>
                            <div class="modal fade" id="@item.MaDatBan" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-body">
                                            @*@Html.Action("Delete", new { id = item.MaDatBan })*@
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary">Save changes</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        


                    </td>
                </tr>

            }
        </table>
        <div class="dataTables_paginate paging_bootstrap pagination align-center">
            @Html.ActionLink("Đặt Thêm Bàn", "Create")
        </div>
        <div class="row-fluid">
            <div class="span6">
                <div class="dataTables_info" id="sample-table-2_info">
                    trang@(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
                </div>
            </div>
            <div class="span6">
                <div class="dataTables_paginate paging_bootstrap pagination">
                    <ul>
                        @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page = Page }))
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

